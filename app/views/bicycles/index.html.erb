<h1>List Of Bicycles</h1>
<div id="products">
<%= form_tag bicycles_path , method: :get do%>
    <%= label_tag :brand%>
    <%= text_field_tag :search %></br>
    <%= submit_tag "Search!"%>
    <% end %>
   
    
<% @bicycles.each do |b| %>
    <div class="product">
    <p><%= link_to b.brand , b %></p>
    <img src=<%= b.urlpicture %>>
    <p>Price : <%= b.price  %>$</p>
    </div>
     <% end %>

</div>