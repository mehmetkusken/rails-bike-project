<h1>Your Transaction History</h1>
 <% @payments.each do |p| %>
    
    <% if p.user.id == current_user.id %>
    <img src=<%= p.bicycle.urlpicture  %>>
    <p>Credit Card Number: <%= p.card_information %></p>
    <p>Experation Date:<%= p.exp_date %></p>
    <p>Security Code:<%= p.security_code %></p>
    <p>Bicycle Brand:<%= p.bicycle.brand %></p>
    <p>Buyer Name:<%= p.user.username %></p>
    <% else %>
    <% end %>
<% end %>

<%= link_to "New Payment" , new_bicycle_payment_path(@bicycle)%>



